# ===========================================
# ErrorWatch Production Environment
# ===========================================
# Copy to .env.production and fill values
# NEVER commit .env.production to git!

# ===========================================
# Domain Configuration
# ===========================================
DOMAIN=errorwatch.io
ACME_EMAIL=admin@errorwatch.io
API_URL=https://api.errorwatch.io
DASHBOARD_URL=https://errorwatch.io

# Caddy (Docker reverse proxy)
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443
DASHBOARD_UPSTREAM=host.docker.internal:4001
API_UPSTREAM=host.docker.internal:3333

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Host ports published by docker-compose (change to avoid conflicts)
DOCKER_POSTGRES_PORT=55432
DOCKER_REDIS_PORT=56379

POSTGRES_DB=errorwatch
POSTGRES_USER=errorwatch
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# ===========================================
# Secrets (REQUIRED)
# ===========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=GENERATE_STRONG_SECRET_HERE
ADMIN_API_KEY=ew_admin_GENERATE_THIS
API_KEY_HASH_SECRET=GENERATE_STRONG_SECRET_HERE

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=ErrorWatch <alerts@errorwatch.io>

# ===========================================
# Billing (Stripe)
# ===========================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxxxx
STRIPE_PRICE_TEAM=price_xxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxx

# ===========================================
# OAuth (Optional)
# ===========================================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
