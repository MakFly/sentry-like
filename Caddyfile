# ===========================================
# ErrorWatch Production Caddyfile (Oneshot - Direct Install)
# ===========================================
# Copy to /etc/caddy/Caddyfile
# Usage: caddy reload --config /etc/caddy/Caddyfile

# Global options
{
    admin off
    log {
        output file /var/log/caddy/errorwatch.log
    }
}

# Dashboard (main domain) - REPLACE {$DOMAIN} with your actual domain
errorwatch.io {
    reverse_proxy localhost:3001

    tls {
        dns cloudflare {env.CLOUDFLARE_API_TOKEN}
    }

    encode gzip zstd

    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }
}

# API subdomain - REPLACE {$DOMAIN} with your actual domain  
api.errorwatch.io {
    tls {
        dns cloudflare {env.CLOUDFLARE_API_TOKEN}
    }

    @sse {
        path /sse/*
    }

    # Prevent transfer/content-encoding rewrites for SSE.
    handle @sse {
        reverse_proxy localhost:3333 {
            header_up Accept-Encoding identity
            flush_interval -1
            transport http {
                compression off
                versions 1.1
            }
        }
    }

    handle {
        encode gzip zstd

        header {
            X-Frame-Options "DENY"
            X-Content-Type-Options "nosniff"
            X-XSS-Protection "1; mode=block"
            Referrer-Policy "strict-origin-when-cross-origin"
            -Server
        }

        reverse_proxy localhost:3333
    }
}
