# ===========================================
# ErrorWatch Production Caddyfile (Docker)
# Domain and upstream values are injected via env vars.
# ===========================================

{
    admin off
    email {$ACME_EMAIL}
    log {
        output stdout
        format json
    }
    # Disable automatic HTTPS for domains without DNS
    auto_https off
}

http://51.158.55.137 {
    # Auth API -> backend
    @authApi path /api/auth/*
    reverse_proxy @authApi host.docker.internal:3333

    # SSE -> backend (strip encoding headers)
    @sse path /sse/*
    reverse_proxy @sse host.docker.internal:3333 {
        header_down -Transfer-Encoding
        header_down -Content-Encoding
    }

    # tRPC API -> dashboard (Next.js)
    @trpcApi path /api/trpc/*
    reverse_proxy @trpcApi host.docker.internal:4001

    # Other API routes -> backend
    @backendApi path /api/v1/*
    reverse_proxy @backendApi host.docker.internal:3333

    # Everything else -> dashboard
    reverse_proxy host.docker.internal:4001
}

http://{$DOMAIN} {
    reverse_proxy {$DASHBOARD_UPSTREAM}
}

{$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    reverse_proxy {$DASHBOARD_UPSTREAM}
}

api.{$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    reverse_proxy {$API_UPSTREAM}
}
