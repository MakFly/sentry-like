# ===========================================
# ErrorWatch Production Caddyfile (Docker)
# Domain and upstream values are injected via env vars.
# ===========================================

{
    admin off
    email {$ACME_EMAIL}
    log {
        output stdout
        format json
    }
}

# Kuma Uptime Monitoring
kuma.{$BASE_DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        -Server
    }

    reverse_proxy {$KUMA_UPSTREAM}
}

# Dashboard
{$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    reverse_proxy {$DASHBOARD_UPSTREAM}
}

api.{$DOMAIN} {
    @sse {
        path /sse/*
    }

    # SSE streams are sensitive to proxy/content-encoding transforms.
    # Route them through a dedicated upstream config to avoid 502 from
    # duplicate transfer-encoding handling.
    handle @sse {
        reverse_proxy {$API_UPSTREAM} {
            header_up Accept-Encoding identity
            flush_interval -1
            transport http {
                compression off
                versions 1.1
            }
        }
    }

    handle {
        encode gzip zstd

        header {
            Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
            X-Frame-Options "DENY"
            X-Content-Type-Options "nosniff"
            Referrer-Policy "strict-origin-when-cross-origin"
            -Server
        }

        reverse_proxy {$API_UPSTREAM}
    }
}
