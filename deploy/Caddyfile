# ===========================================
# ErrorWatch Production Caddyfile (Docker)
# Domain and upstream values are injected via env vars.
# ===========================================

{
    admin off
    email {$ACME_EMAIL}
    log {
        output stdout
        format json
    }
}

# Kuma Uptime Monitoring
kuma.{$BASE_DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        -Server
    }

    reverse_proxy {$KUMA_UPSTREAM}
}

# Dashboard
{$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        -Server
    }

    reverse_proxy {$DASHBOARD_UPSTREAM}
}

api.{$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    @sse {
        path /sse/*
        header Connection *upgrade*
    }
    reverse_proxy @sse {$API_UPSTREAM}

    reverse_proxy {$API_UPSTREAM}
}
