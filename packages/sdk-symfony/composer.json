{
  "name": "errorwatch/sdk-symfony",
  "description": "Symfony bundle for error monitoring with ErrorWatch",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "ErrorWatch",
      "homepage": "https://errorwatch.io"
    }
  ],
  "keywords": [
    "symfony",
    "error-monitoring",
    "errorwatch",
    "bundle",
    "apm",
    "exception"
  ],
  "autoload": {
    "psr-4": {
      "ErrorWatch\\Symfony\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ErrorWatch\\Symfony\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "symfony/framework-bundle": "^6.0|^7.0|^8.0",
    "symfony/http-client": "^6.0|^7.0|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64",
    "twig/twig": "^3.0",
    "monolog/monolog": "^3.0",
    "symfony/phpunit-bridge": "^6.0|^7.0|^8.0",
    "symfony/http-kernel": "^6.0|^7.0|^8.0",
    "symfony/event-dispatcher": "^6.0|^7.0|^8.0",
    "symfony/security-bundle": "^6.2|^7.0|^8.0",
    "symfony/messenger": "^6.0|^7.0|^8.0",
    "doctrine/dbal": "^4.4"
  },
  "suggest": {
    "monolog/monolog": "Required to enable automatic Monolog forwarding.",
    "symfony/twig-bundle": "Required to enable the session replay Twig extension.",
    "symfony/security-bundle": "Required to enable user context capture and security event tracking.",
    "symfony/messenger": "Required to enable messenger worker failure capture.",
    "doctrine/dbal": "Required to enable Doctrine query tracing in APM."
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "stan": "./vendor/bin/phpstan analyse",
    "lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
    "cs:fix": "./vendor/bin/php-cs-fixer fix"
  },
  "extra": {
    "symfony": {
      "require": "6.4.*"
    }
  }
}
