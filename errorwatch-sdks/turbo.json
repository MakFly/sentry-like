{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**/*.ts", "**/*.ts"],
      "cache": true
    },
    "test": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
